<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/tv_arrival_time_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/choose_arrival_time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"/>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/tv_arrival_time_title"
        android:background="@color/app_background"/>
    <TextView
        android:id="@+id/tv_arrival_time_toady"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/view_line"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="今天"/>
    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_arrival_time_toady"
        android:background="@color/app_background"/>

    <TextView
        android:id="@+id/tv_arrival_time_tomorrow"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_arrival_time_toady"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="明天"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_arrival_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_arrival_time_title"
        android:layout_toRightOf="@+id/tv_arrival_time_toady"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/cancle"/>
</RelativeLayout>